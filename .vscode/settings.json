{
    // markdown画像貼り付け時保存先
    "markdown.copyFiles.destination": {
        "**/*": "${documentDirName}/img/${documentBaseName}-${unixTime}.${fileExtName}"
    },
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdown-preview-enhanced.alwaysShowBacklinksInPreview": false,
    // Markdown拡張機能の設定
    "markdown.extension.completion.enabled": true,
    "markdown.extension.orderedList.marker": "one",
    // Vim拡張機能の設定
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.useSystemClipboard": true, // クリップボードを使用する
    "vim.hlsearch": true, // 検索結果をハイライトする
    // Diffエディタのカスタマイズ設定
    "workbench.colorCustomizations": {
        // --- 変更された行全体の背景色 (薄め) ---
        "diffEditor.insertedLineBackground": "#00ff0015", // 追加行：ごく薄い緑
        "diffEditor.removedLineBackground": "#ff000015",  // 削除行：ごく薄い赤

        // --- 変更があった具体的な箇所 (濃いめ・クッキリ) ---
        "diffEditor.insertedTextBackground": "#00ff0060", // 追加箇所：より明るい緑
        "diffEditor.removedTextBackground": "#ff000060",  // 削除箇所：より明るい赤

        // (任意) 境界線を付けてさらに強調する場合
        // "diffEditor.insertedTextBorder": "#00ff00aa",
        // "diffEditor.removedTextBorder": "#ff0000aa"
    },
    // Git拡張機能の設定
    "git.confirmSync": false,
    "gitlens.views.scm.grouped.hiddenViews": {
        "commits": false,
        "worktrees": true,
        "branches": false,
        "remotes": false,
        "stashes": false,
        "tags": false,
        "contributors": false,
        "repositories": true,
        "fileHistory": false,
        "launchpad": false,
        "searchAndCompare": false
    },
    // エディタの設定
    "editor.unicodeHighlight.invisibleCharacters": false,
    // Docker拡張機能の設定
    "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
    "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
    "workbench.editor.enablePreview": false, // winでctrl+pが働かない問題の回避
    "files.associations": {
        "*.tmpl": "javascript"
    },
    // winでctrl+pが働かない問題の回避
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen",
    ],
    "javascript.updateImportsOnFileMove.enabled": "always"
}